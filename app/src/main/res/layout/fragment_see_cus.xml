<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Fragment.SeeCusFragment">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/see_clos"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:src="@drawable/ic_baseline_close_24"/>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view_See"
            android:background="@drawable/border_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/see_clos"
            android:elevation="5dp"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10"
            android:layout_below="@id/search_view_See"
            android:id="@+id/sho_Cus_Li">

        </ListView>

</RelativeLayout>